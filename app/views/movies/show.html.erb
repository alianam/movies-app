<!-- This is just one movie -->

<h2><%= @movie.title %></h2>
<p><img src= <%= @movie.movie_poster %>></p>
<p>Director: <%= @movie.director %></p>
<p>Air Date: <%= @movie.air_date %></p>
<p>Duration: <%= @movie.duration %> minutes</p>
<p>Genres:</p>
<% @movie.genres.each do |genre| %>
  <span>| <%= genre.category %></span>
<% end %>
<p>Gross: <%= @movie.gross %></p>
<p><a href=<%= @movie.imdb_link %>>IMDB Link</a></p>
