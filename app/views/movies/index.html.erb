<h2>Browse All Movies: </h2>

<%= paginate @movies, window: 3 %>
<% @movies.each do |movie|%>
  <h4><%= movie.title %></h4>
  <p><a href="/movies/<%= movie.id %>"><img src=<%= movie.movie_poster%>></a></p>
  <p>Director: <%= movie.director %></p>
  <% movie.genres.each do |genre| %>
    <span>| <%= genre.category %></span>
  <% end %>
  <%= form_tag '/wishlist_movies', method: :post do %>
    <button name="submit" value="submit">Add To Your Wishist</button>
    <input type="hidden" name="movie_id" value=<%= movie.id %>>
  <% end %>
<% end %>